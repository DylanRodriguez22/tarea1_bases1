@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    
}
<style>
   
    .Tabla{
        background-color: #13232f;
        max-width:900px;

        box-shadow: 0 4px 10px 4px rgba(#13232f,.3);
        padding: 40px;
       
        margin: 40px auto;
        border-radius: 4px;
    }

    table {
        border: 2px solid black;
        border-collapse: collapse;
        padding: 8px;
        max-width: 900px; 
        background-color: #6c757d;
    }

    h1{
        color: white;
        text-align: center;
        margin: 0 0 40px;
    }

    td, th {
        border: 1px solid black;
        text-align: left;
        padding: 8px;

    }

    tr:nth-child(even) {
        background-color: #C1BDBA;
    }
</style>
<div class="Tabla">
<table id="Tabla de Pacientes">
    <h1>Lista de Pacientes</h1>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Cédula</th>
            <th>Fecha de Nacimiento</th>
            <th>Edad</th>
            <th>Dirección</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paciente in Model.pacientes)
        {
            <tr>
                <td>@paciente.nombre</td>
                <td>@paciente.apellido</td>
                <td>@paciente.cedula</td>
                <td>@paciente.fechaDeNacimiento</td>
                <td>@paciente.edad</td>
                <td>@paciente.direccion</td>
            </tr>
        }
    </tbody>
 <table/>
</div>