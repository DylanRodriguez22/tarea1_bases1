@page
@model Tarea1_Bases1.Pages.AgregarPacienteModel
@{
    var fechaHoyH = Model.fechaHoy.ToString("yyyy-MM-dd");
}

@if (Model.errorCedulaNumeros)
{
    <h1>Error</h1>
    <p>La cédula solo debe contener números.</p>
    
}


@if (Model.agregadoCorrectamente)
{
    <h1>Completado</h1>
    <p>Se ha agregado el paciente correctamente.</p>

}
<style>

    form{
        margin: 0 auto;
        width: 400px;
        background-color: #13232f;
        
        box-shadow: 0 4px 10px 4px rgba(#13232f,.3);

        padding: 40px;
        max-width:600px;
        margin:40px auto;
        border-radius:4px;
    }
    h1{
        color: #ffffff;
        text-align: center;
        margin: 0 0 40px;
    }
    label{
        color: #ffffff;
        
    }
    input{
        color: #ffffff;
        font-size: 22px;
        display: block;
        width: 100%;
        height: 100%;
        padding: 5px 10px;
        background: none;
        background-image: none;
        border: 1px solid #13232f 
        
        border-radius: 0;
        transition: border-color .25s ease, box-shadow .25s
    }

    .Boton{
       
        display: block;
        width: 100%;
        border: 0;
        outline: none;
        border-radius: 0;
        padding: 15px 0;
        font-size: 2rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: .1em;
        background: #1ab188;
        color: #ffffff;
        transition: all.5s ease;
        -webkit-appearance: none;
    
    }
    .text_danger{
        color: #ffffff
    }
</style>


    <div class="container">
    <form method="POST" >
        <h1>Agregar Paciente</h1>
        <input type="text" id="Nombre" asp-for="nombre" , value="@Model.nombre" placeholder="Nombre"> 
            <span asp-validation-for="nombre" class="text_danger"></span>
            <br> <br />

        <input type="text" id="Apellido" asp-for="apellido" , value="@Model.apellido" placeholder="Apellido">
        <span asp-validation-for="apellido" class="text_danger"></span>
        <br> <br />

        <input type="text" id="Cedula" asp-for="cedula"  value="@Model.cedula" placeholder="Cedula">
        <span asp-validation-for="cedula" class="text_danger"></span>
        <br> <br />
        
        <input type="text" id="Direccion" asp-for="direccion" value="@Model.direccion" placeholder="Direccion" /> 
        <span asp-validation-for="direccion" class="text_danger"></span>
        <br> <br />

       
            <input type="date" id="fecha" name="fecha" value="@fechaHoyH" max="@fechaHoyH" /><br> <br />

            <input class="Boton" type="submit" name="Registar" value="Registrar" />

           
        </form>
    </div>
